<!-- Header -->
<div class="header">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a href="<%= logged_in? ? browse_path : welcome_path %>" class="navbar-brand">Logo</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-toggle-area" aria-controls="navbar-toggle-area" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbar-toggle-area">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item <%= set_active_nav_item browse_path%>">
          <%= link_to 'Browse', browse_path, class: 'nav-link' %>
        </li>
        <% if logged_in? %>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle <%= set_active_nav_item account_path %>" id="navbar-dropdown-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.email.split('@')[ 0 ] %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbar-dropdown-link">
              <%= link_to 'Account', account_path, class: 'dropdown-item' %>
              <%= link_to 'Log out', logout_path, method: 'delete', class: 'dropdown-item' %>
            </div>
          </li>
        <% else %>
          <li class="nav-item <%= set_active_nav_item signup_path %>">
            <%= link_to 'Sign Up', signup_path, class: 'nav-link' %>
          </li>
          <li class="nav-item <%= set_active_nav_item login_path %>">
            <%= link_to 'Log In', login_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
