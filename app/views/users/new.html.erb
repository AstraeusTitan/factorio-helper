<% provide :page_title, 'Sign Up' %>
<div class="row justify-content-center">
  <div class="col-lg-6">
    <h1>Sign Up</h1>
    <%= form_for(@user, url: signup_path) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        <% unless @user.errors[ :email ].empty? %>
          <div class="alert alert-danger">
            <small><%= @user.errors[ :email ][ 0 ] %></small>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <div class="<%= 'alert alert-danger' unless @user.errors[ :password ].empty? %>">
          <small>password must be at least 6 characters</small>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirmation' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <% unless @user.errors[ :password_confirmation ].empty? %>
          <div class="alert alert-danger">
            <small>must match password</small>
          </div>
        <% end %>
      </div>
      <%= f.submit "Create account", class: 'btn btn-primary' %>
      <br>
      <small class="text-muted">Already have an account? <%= link_to 'Log in.', login_path %></small>
    <% end %>
  </div>
</div>
